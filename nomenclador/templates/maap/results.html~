{% extends 'maap/base.html' %}
{% load markup tagging_tags %}
{% block title %}Resultados de busqueda{%endblock%}
{% block js_onload %}

    state.loadLayer('{{layerpath}}', false, function(layer){
        layer.show();    
    });
    
{% endblock %}

{% block searchform %}
    <form action="{% url maap.views.get_objects %}" method="get" >
    <input type="text" value="" name="streetname">
    <input type="text" value="" name="intersection">
    <input type="text" value="" name="streetnumber">
    <input type="submit" value="Buscar" id="searchbuton" name="search">
    </form>
{% endblock %}

{% block content %}

	{% if objs %}
	<ul id="obj-list">
		{% for object in objs %}
		<li>
        {% with object.category.all|first as category %}
        <h3><a href="{% url maap.views.maap_object_detail category.slug,object.pk %}">{{object.name}}</a></h3>
        {% endwith %}  
        <p class="discreet tags">                
        {% tags_for_object object as tags%}
        {% for tag in tags%}
            <a href="{% url maap.views.obj_list_by_tag tag %}">{{tag}}</a> 
        {% endfor %}
        </p>
        </li>
        {% endfor %}
	</ul>
    {% else %}
    <h1>No hay resultados</h1>
    {% endif %}
    

{% endblock %}

